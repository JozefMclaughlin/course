<form class="" action="/<%= @sandwich.id %>" method="post">

  <% if (@sandwich.id) %>
    <input type="hidden" name="_method" value="put">
  <% end %>
  <label >Title</label>
  <input type="text" name="title" value="<%= @sandwich.title %>" placeholder="Name of Sandwich">
  <br>
  <br>
  <label >Description</label>
  <input type="textarea" name="description" value="<%= @sandwich.description %>" placeholder="Description of Sandwich">
  <br>
  <br>
  <input type="submit" name="" value="Save Sandwich">
</form>
