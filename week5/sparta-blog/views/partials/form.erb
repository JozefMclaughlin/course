
<form class="" action="/<%= @post[:id] %>" method="post">

  <% if @post[:id] != "" %>
    <input type="hidden" name="_method" value="put">
  <% end %>
  <div class="">
    <label> Title</label>
    <input type="text" name="title" value="<%= @post[:title] %>" placeholder="Enter Title">
  </div>
  <div class="">
    <label>Body</label>
    <input type="textarea" name="body" value="<%= @post[:body] %>" placeholder="Enter the body of the post">
  </div>
  <div class="">
    <input type="submit" name="" value="Save Post">
  </div>
</form>
