<div class="container">

  <div class="row" style="margin: 50px auto">
    <div class="col-md-6 col-md-offset-3">
      <h3><a href="/units"><i class="fas fa-arrow-left"></i></a></h3>
      <div class="row text-center">
        <div class="col-md-8">
          <h1 class="title"><%= @unit["name"] %></h1>
          <h3><%= @unit["age"] %> age unit</h3>
          <h4><%= @unit['description'] %></h4>
          <h4>Cost: <%= @unit['cost'].to_s.gsub(/[{"}>]/,'') %></h4>
        </div>
      </div>
    </div>
  </div>
</div>
